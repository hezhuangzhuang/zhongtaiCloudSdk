<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_top_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_conf_bg_top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_request_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_close_camera"
        android:layout_alignBottom="@id/iv_close_camera"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:src="@mipmap/ic_chair"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_add_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_close_camera"
        android:layout_alignBottom="@id/iv_close_camera"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_request_chair"
        android:padding="12dp"
        android:src="@mipmap/icon_add"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_close_camera"
        android:layout_alignBottom="@id/iv_close_camera"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:src="@mipmap/icon_switch_camera"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_close_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_switch_camera"
        android:padding="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:src="@mipmap/icon_state_close_camera" />

    <ImageView
        android:id="@+id/iv_mute_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_close_camera"
        android:layout_alignBottom="@id/iv_close_camera"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_close_camera"
        android:padding="12dp"
        android:src="@mipmap/ic_close_all_mic"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_conf_name"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_alignBottom="@id/iv_close_camera"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/color_333"
        android:textSize="14sp"
        tools:text="这是会议名称和密码\n这是密码" />
</RelativeLayout>