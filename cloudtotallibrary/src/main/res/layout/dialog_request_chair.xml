<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg_radius_10"
    android:padding="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="请输入会议接入码"
        android:textColor="#666666"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_accessCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_dialog_et_bg_ccc_3dp"
        android:hint="在此输入会议接入码"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="#333333"
        android:textColorHint="#66333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_accessCode"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_accessCode"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/centerSpace"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_bt_bg_e5e5e5_5dp"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="14sp" />

        <Space
            android:id="@+id/centerSpace"
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_accessCode"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_bt_bg_418ad5_5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>