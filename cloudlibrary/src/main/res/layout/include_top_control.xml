<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_top_control"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_conf_bg_top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="6dp"
        android:paddingLeft="18dp"
        android:paddingRight="28dp"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:src="@mipmap/ic_chair"/>

    <ImageView
        android:id="@+id/iv_right_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/statusbar_view_height"
        android:layout_toLeftOf="@id/iv_chair"
        android:padding="8dp"
        android:src="@mipmap/icon_add"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_back_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/statusbar_view_height"
        android:padding="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:src="@mipmap/icon_switch_camera"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_close_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_back_operate"
        android:padding="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:src="@mipmap/icon_state_close_camera"/>

    <ImageView
        android:id="@+id/iv_hide_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_close_camera"
        android:padding="12dp"
        android:visibility="gone"
        android:paddingLeft="30dp"
        android:src="@mipmap/ic_close_local"
        android:paddingRight="30dp"
        />

</RelativeLayout>